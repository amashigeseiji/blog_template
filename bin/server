#!/usr/bin/env node

import server from '../lib/server.js'
import { srcDir } from '../lib/dir.js'
import { watchers, watch } from '../lib/watcher.js'
import generate from '../lib/generate.js'

watchers.push({
  paths: srcDir,
  callback: generate
})
watch()
generate()

server().listen(process.env.PORT || 8000)
